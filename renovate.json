{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/config/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Pin latest tags to specific versions with digests",
      "matchDatasources": [
        "docker"
      ],
      "matchCurrentValue": "/^latest$/",
      "pinDigests": true
    },
    {
      "description": "Pin digest for all docker images for reproducibility",
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "description": "Group all oauth2-proxy updates together",
      "groupName": "oauth2-proxy",
      "matchPackageNames": [
        "/oauth2-proxy/"
      ]
    },
    {
      "description": "Automerge patch updates for non-critical services",
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/busybox/",
        "/redis/",
        "/nginx/"
      ]
    },
    {
      "description": "Schedule updates for weekends to reduce noise",
      "matchDatasources": [
        "docker"
      ],
      "schedule": [
        "after 9am on saturday"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
